<UserControl
    x:Class="AcFunVideo.View.CategoryIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AcFunVideo.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:ConnectionId='1' x:Name="rootGrid" Width="80" Height="80" 
                                    Margin="1"
                                          BorderBrush="Red">
        <Image x:ConnectionId='2' x:Name="img" Height="35" Width="35"
        Margin="8,8,0,0"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Left" Source="IMGS/Zone/dance icon.png"/>
        <TextBlock x:ConnectionId='3' x:Name="title" Height="30" VerticalAlignment="Bottom"
                                                   Margin="0,0,5,5"
                   Foreground="White"
                                                   Text="彼女" FontSize="18" 
                                                   TextAlignment="Right"/>
    </Grid>
</UserControl>

